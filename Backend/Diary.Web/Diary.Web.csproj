<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="9.0.8">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Diary.Core\Diary.Core.csproj" />
    <ProjectReference Include="..\Diary.Core.Implementation\Diary.Core.Implementation.csproj" />
    <ProjectReference Include="..\Diary.Data\Diary.Data.csproj" />
  </ItemGroup>

  <Target Name="BuildAngular" BeforeTargets="Build">
    <Exec WorkingDirectory= "..\..\Frontend" Command="npm install" />
    <Exec WorkingDirectory="..\..\Frontend" Command="npm run build" />
    <ItemGroup>
      <AngularBuildFiles Include="..\..\Frontend\dist\wwwroot\browser\**" />
    </ItemGroup>
    <Copy SourceFiles="@(AngularBuildFiles)" DestinationFolder="wwwroot\%(RecursiveDir)" />
  </Target>

</Project>
